<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto" 
             BackgroundColor="#ADD8E6">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
        
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Descrição do Produto:"  HorizontalTextAlignment="Center"
               FontAttributes="Bold"/>
        <Entry x:Name="txt_descricão" HorizontalTextAlignment="Center"/>

        <Label Text="Quantidade:"  HorizontalTextAlignment="Center"
               FontAttributes="Bold"/>
        <Entry x:Name="txt_quantidade" HorizontalTextAlignment="Center" Keyboard="Numeric" />

        <Label Text="Preço Unitário:"  HorizontalTextAlignment="Center"
               FontAttributes="Bold"/>
        <Entry x:Name="txt_preco" HorizontalTextAlignment="Center" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>