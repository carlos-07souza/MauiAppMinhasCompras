<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}">

<ContentPage.ToolbarItems>

    <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>

</ContentPage.ToolbarItems>

<VerticalStackLayout Spacing="10" Padding="10">

    <Label Text="Descrição do Produto:"  HorizontalTextAlignment="Center"
           FontAttributes="Bold"/>
    <Entry x:Name="txt_descricao" Text="{Binding Descricao}" HorizontalTextAlignment="Center"/>

    <Label Text="Quantidade:"  HorizontalTextAlignment="Center"
           FontAttributes="Bold"/>
        <Entry x:Name="txt_quantidade"  Text="{Binding Quantidade}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>

    <Label Text="Preço Unitário:"  HorizontalTextAlignment="Center"
           FontAttributes="Bold"/>
        <Entry x:Name="txt_preco"   Text="{Binding Preco}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>


</VerticalStackLayout>
    
</ContentPage>